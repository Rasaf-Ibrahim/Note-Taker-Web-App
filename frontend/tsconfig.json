{
    "compilerOptions": {
      "target": "es2015",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
  
  
      // setup for having as less type annotation as possible
      "strict": false,
      "alwaysStrict": false,
      "noImplicitAny": false,
      "useUnknownInCatchVariables":false,
  
  
      // setup for flexibility
      "allowImportingTsExtensions": true,
  
  
      "plugins": [
        {
          "name": "next"
        }
      ],
  
      "paths": {
        "@/*": ["./src/*"]
      }
    },
  
    "include": ["next-env.d.ts", "src/styles/mui-theme/mui-theme-augmentation.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.js"],
    
    "exclude": ["node_modules"]
}
  